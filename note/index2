<body>
    <h1>Write to Firebase</h1>

    <!-- Input for Title -->
    <label for="title">Title:</label>
    <input type="text" id="title" placeholder="Enter title">

    <!-- Textarea for Content -->
    <label for="content">Content:</label>
    <textarea id="content" placeholder="Enter your content"></textarea>

    <!-- Save Button -->
    <button onclick="saveToFirebase()">Save to Firebase</button>

    <script>
        function saveToFirebase() {
            // Get values from the input and textarea
            const title = document.getElementById('title').value;
            const content = document.getElementById('content').value;

            // Get a reference to the Firebase database
            const database = firebase.database();

            // Generate a unique key for the new "write" entry
            const writeKey = database.ref('writes').push().key;

            // Create an object with title and content
            const writeData = {
                title: title,
                content: content,
                timestamp: firebase.database.ServerValue.TIMESTAMP
            };

            // Save the data to Firebase under the "writes" path with the generated key
            database.ref('writes/' + writeKey).set(writeData)
                .then(() => {
                    alert('Data saved successfully!');
                })
                .catch((error) => {
                    console.error('Error saving data:', error);
                });
        }
    </script>
